<%= simple_form_for @product do |f| %>
  <%= f.input :photo, as: :file,
               label: :Foto,
               required: true %>

  <%= f.input :name,
               label: :Nome,
               placeholder: "Digite o nome do produto...",
               required: true,
               autofocus: true,
               input_html: { maxlength: 21 } %>

  <%= f.input :price,
               label: :Preço,
               placeholder: "Digite o preço do produto...",
               required: true %>

  <%= f.input :description,
               label: :Descrição,
               placeholder: "Digite a descrição do produto...",
               required: true,
               input_html: { maxlength: 300 } %>

  <%= f.button :submit, value:"Criar Produto", class:"button-confirm" %>
<% end %>
