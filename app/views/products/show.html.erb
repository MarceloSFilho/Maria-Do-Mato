<div class="container">
  <div class="row">
    <div class="col spacing-photo">
      <div class="img-show">
        <%= cl_image_tag @product.photo.key %>
      </div>
    </div>
    <div class="col spacing-top">
      <div class="content-product">
        <div class="show-product-name">
          <%= @product.name.upcase %>
        </div>
        <div class="show-product-price">
          R$ <%= @product.price %>
        </div>
        <div class="buttons-buy-show-align">
          <button class="buttons-buy-show">COMPRAR</button>
          <button class="buttons-buy-show">ADICIONAR NO CARRINHO</button>
        </div>
        <hr>
        <div class="show-product-description">
          <h2 class="description-h2">Descrição</h2>
          <%= @product.description %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %>

<%= link_to 'remove this product', product_path(@product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
