<div class="container">
  <div class="login-style">
    <div class="row box-login">
      <div class="col login-inputs">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs form-login-inputs">
          <img src="https://cdn.discordapp.com/attachments/636310644630618142/1097639051428900874/png_20220811_022426_0000.png" width=150px, class="photo-top-login">
            <%= f.input :email,
                        placeholder: "Digite seu email",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        label: :Senha,
                        placeholder: "Digite sua senha",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.input :remember_me, label: :Lembrar, as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Entrar", class: "buttom-login" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
      <div class="col img-login-maria"><img src="https://i.pinimg.com/564x/73/82/af/7382afad95e29bd093fc52c90b69d21a.jpg" class="photo-maria-login"></div>
    </div>
  </div>
</div>
